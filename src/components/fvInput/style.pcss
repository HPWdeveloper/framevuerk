.fv-input{
    
}
.fv-input-select,
.fv-input-datepicker{
    cursor: pointer;
    & > .fv-input-select-item{
        background: var(--shadow-color-light);
        border: 1px solid var(--shadow-color);
        box-shadow: 0 2px 1px var(--shadow-color-light);
        color: var(--color);
        border-radius: 0.5em;
        margin-left: 0.5em;
        padding: 0 0.5em;
        line-height: 3em;
    }
    & > .fv-arrow{
        float: left;
        margin: 1.1em 0.4em;;
    }
}