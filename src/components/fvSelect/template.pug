span
  fv-input(:class="inputClass",
    :display-value="displayValue",
    :placeholder="placeholder",
    :required="required",
    :disabled="disabled",
    :value="value",
    render-type="display",
    caret-icon="fa fa-caret-down",
    @enter="open()",
    ref="inputEl")
  fv-dialog.fv-select(ref="dialog",
    :class="dialogClass",
    :buttons="dialogButtons",
    @close="$emit('close')",
    @open="$emit('open')",
    :first-focus-on="true",
    content-class="fv-no-padding")
    fv-main(ref="select")
      fv-header.fv-invert(v-if="showInput")
        fv-input.fv-form-control.fv-search-style.fv-grow(:placeholder="locale.search()",
          v-model="searchQuery",
          @keydown.native="showInput? $refs.list.keydown($event): function(){}",
          ref="searchQueryEl")
      fv-content.fv-no-padding
        fv-list.no-outline-border(:items="options.concat(localItems)",
          :get-focus="showInput? false: true",
          ref="list",
          :search-query="searchQuery",
          :selected="pValue",
          @click.native="showInput? $refs.searchQueryEl.$el.focus(): function(){}",
          @click-item="clickItem($event, true)")
