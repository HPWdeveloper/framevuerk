fv-main#app
  fv-header
    fv-button.fv-icon.fv-hide-on-lg(@click.native="$refs.sidebar.toggle()")
      i.fa.fa-bars
    .fv-title
      h2.fv-no-wrap(v-if="$route.name !== 'welcome'") {{$route.name}}
      h2.fv-no-wrap(v-else) Framevuerk
    .fv-icon(v-if="$route.name.indexOf('/components') !== -1")
      a.fv-link(:href="$root.githubRepo + '/tree/master/src/components/' + $route.name",
        target="_blank") View Source
  router-view.fv-row
  fv-sidebar.sidebar(:pin="null", ref="sidebar", :width="300")
    fv-header.doc-sidebar-header(:height="250")
      a.fv-title.fv-text-center(href="index.html")
        img.doc-logo(src="./logo-white.svg")
        h1 Framevuerk
        p.fv-word-wrap Awesome fully responsive Vue.js framevuerk!
    fv-content.fv-no-padding
      fv-list.fv-no-border
        fv-list-item(v-for="item in sidebarItems",
          :selected="$route.name === item.text",
          @click="clickItem(item)",
          expanded)
          | {{item.text}}
          fv-list(v-if="item.items",
            slot="sub-list")
            fv-list-item(v-for="subItem in item.items",
              :selected="$route.name === subItem.text",
              @click="clickItem(subItem)",
              expanded)
              | {{subItem.text}}
              fv-list(v-if="subItem.items",
                slot="sub-list",
                expanded)
                fv-list-item(v-for="subItemItem in subItem.items",
                  :selected="$route.name === subItemItem.text",
                  @click="clickItem(subItemItem)")
                  | {{subItemItem.text}}
